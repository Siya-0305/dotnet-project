@model Mom_Managment.Models.LoginViewModel
@{
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-box">

        <div class="login-logo">
            MOM System
        </div>

        <h2>Welcome Back</h2>
        <p>Sign in to access your meeting management dashboard</p>

        <form asp-action="Login" asp-controller="Account" method="post">

            <input asp-for="Username" placeholder="Username" />
            <input asp-for="Password" placeholder="Password" />

            <div class="login-options">
                <label>
                    <input asp-for="RememberMe" /> Remember me
                </label>
                <a href="#">Forgot password?</a>
            </div>

            <button type="submit">Sign In</button>

            @if (ViewBag.Error != null)
            {
                <div class="error">@ViewBag.Error</div>
            }
        </form>

        <div class="login-footer">
            Don't have an account? <a href="/Account/Register">Create a new account</a>
        </div>
    </div>
</div>
